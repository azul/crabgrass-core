- header = render 'common/requests/nav'

- if @requests.empty?
  = header
  = :no_things_found.t(things: :requests.t.downcase)
- else
  = header
  %ul.clickable.round
    - @requests.each do |request|
      %li{onmousedown: "window.location.href = '%s'" % request_path(request)}
        = render 'common/requests/line_item', request: request
  = pagination_links(@requests)
